<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Practical_Work_2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Practical_Work_2"
    Shell.FlyoutBehavior="Disabled"
    Title="Practical_Work_2">

    <ShellContent
      
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
      
        ContentTemplate="{DataTemplate local:RegisterPage}"
        Route="RegisterPage" />

    <ShellContent
      
        ContentTemplate="{DataTemplate local:Conversor}"
        Route="Conversor" />

    <ShellContent
      
        ContentTemplate="{DataTemplate local:ForgotPassword}"
        Route="ForgotPassword" />

        <ShellContent
      
        ContentTemplate="{DataTemplate local:Operations}"
        Route="Operations" />
        
</Shell>
