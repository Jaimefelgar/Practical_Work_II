<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Practical_Work_2.MainPage"
             BackgroundColor="LightGray"
             >
             

        <VerticalStackLayout Padding="20" Spacing="20">
            <Frame BackgroundColor="#FF075497" Padding ="20">
                <Label Text="OOP Conversor" HorizontalOptions="Center"
                    FontSize="30"
                    TextColor="White"/>
            </Frame>
       

        <VerticalStackLayout Spacing ="10" HorizontalOptions="CenterAndExpand">
            <Label Text="Username" FontSize="20" />
            <Entry Placeholder="Enter your username" BackgroundColor="White"
                WidthRequest="200"/>

            <Label Text="Password" FontSize="20" />
            <Entry Placeholder="Enter your Password" BackgroundColor="White"
                WidthRequest="200"/>
                
        </VerticalStackLayout>

        <Button Text="SIGN IN"
            BackgroundColor="#FF075497"
            TextColor="White"
            HorizontalOptions="Center"/>


     </VerticalStackLayout>

</ContentPage>
