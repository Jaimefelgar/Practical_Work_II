<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Practical_Work_2.ForgotPassword"
             BackgroundColor="LightGray">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Frame BackgroundColor="#FF075497" Padding="20">
            <Label Text="Password Recovery" HorizontalOptions="Center" FontSize="30" TextColor="White"/>
        </Frame>

        <Entry x:Name="Username" Placeholder="Username" />
        <Button Text="SEND RESET LINK" BackgroundColor="#FF075497" TextColor="White"
               />
    </VerticalStackLayout>
</ContentPage>