<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Practical_Work_2.LoginPage"
             BackgroundColor="LightGray"
             >
             
    <Grid RowDefinitions="Auto, *"> 

        <HorizontalStackLayout HorizontalOptions="End" VerticalOptions="Start" Spacing="10" Margin="0,10,20,0">
            <Button Text="Sign in" 
                    BackgroundColor="Transparent"
                    TextColor="black"
                    Clicked="LoginClicked"/>
            
            <Button Text="Exit" 
                    BackgroundColor="Transparent"
                    TextColor="black"
                    Clicked="ExitClicked"/>
        </HorizontalStackLayout>


        <VerticalStackLayout Grid.Row="1" Padding="20" Spacing="20">
            <Frame BackgroundColor="#FF075497" Padding ="20">
                <Label Text="Login" HorizontalOptions="Center"
                    FontSize="30"
                    TextColor="White"/>
            </Frame>
       

        <VerticalStackLayout Spacing ="10" HorizontalOptions="CenterAndExpand">
            <Label Text="Username" FontSize="20" />
            <Entry Placeholder="Enter your username" BackgroundColor="White"
                WidthRequest="200"/>

            <Label Text="Password" FontSize="20" />
            <Entry Placeholder="Enter your Password" BackgroundColor="White"
                WidthRequest="200"/>

            <Label Text="Repeat Password" FontSize="20" />
            <Entry Placeholder="Enter your Password" BackgroundColor="White"
                WidthRequest="200"/>
                
        </VerticalStackLayout>

        <Button Text="LOG IN"
            BackgroundColor="#FF075497"
            TextColor="White"
            HorizontalOptions="Center"
            Clicked="LoginClicked"/>


        </VerticalStackLayout>
    </Grid>
</ContentPage>
